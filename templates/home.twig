<!doctype html>
<html lang="en">
{% include 'partial/head.twig' %}
    <body>
    {% include 'partial/navigation.twig' %}
        <main class="container" style="padding-top:30px">
            <div class="row">
                {% for product in products %}
                <div class="col-md-3" data-id="{{product.product_id}}">
                <img class="img-fluid" src="images/products/{{product.image}}">
                    <h3>{{product.name}}</h3>
                    <h6>{{product.price}}</h6>
                    <p>{{product.description | slice(0,50) ~ '...'}}</p>
                    <a href="detail.php?product_id={{product.product_id}}">Info</a>
                </div>
                {% endfor %}
            </div>
        </main>
    </body>
</html>